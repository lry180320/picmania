<div class="center">
<div id="pics" class="transitions-enabled center">
  <% @pics.each do |pic| %>
    <div class="box">
      <div class="panel panel-default">
        <%= link_to image_tag(pic.image.url(:medium)), pic %>
        <div class="panel-body">
          <%= pic.description %><br/>
          <strong><%= pic.user.name if pic.user %></strong>
        </div>
        <% if pic.user == current_user %>
          <div class="panel-footer">
            <%= link_to 'Bearbeiten', edit_pic_path(pic) %>
            <%= link_to 'LÃ¶schen', pic, method: :delete, data: { confirm: 'Sind Sie sicher?' } %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<%= will_paginate @pics, renderer: BootstrapPagination::Rails %>
</div>

